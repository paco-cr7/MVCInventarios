@model MVCInventarios.Models.Perfil

@{
    ViewData["Title"] = "Detalles del perfil";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="AgregarEditar" asp-route-id="@Model.Id"
        class="btn btn-primary me-3">
        <i class="fa-solid fa-pen-to-square"></i>&nbsp;Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-circle-arrow-left"></i>&nbsp;Regresar
    </a>
</div>