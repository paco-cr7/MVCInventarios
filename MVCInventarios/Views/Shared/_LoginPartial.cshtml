@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccesor;

<ul class="navbar-nav">
@if(HttpContextAccesor.HttpContext.User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <span class="nav-link text-light fw-bold">¡Hol@@ @HttpContextAccesor.HttpContext.User.Identity.Name!</span>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="from-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index","Home")">
            <button id="logout" type="submit" class="nav-link btn btn-link text-light fw-bold">Salir</button>
        </form>
    </li>
}
else{
    <li class="nav-item">
        <a class="nav-link text-light fw-bold" id="login" asp-controller="Account" asp-action="Login">Acceder</a>
    </li>
}
</ul>
