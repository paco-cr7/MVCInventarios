@model MVCInventarios.Models.Marca

@{
    ViewData["Title"] = "¿Desea eliminar la marca con nombre "+Model.Nombre+"?";
}

<h4>@ViewData["Title"]</h4>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button class="btn btn-danger me-3" type="submit">
            <i class="fa-solid fa-trash"></i>&nbsp;Eliminar
        </button>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa-solid fa-circle-arrow-left"></i>&nbsp;Regresar
        </a>
    </form>
</div>
